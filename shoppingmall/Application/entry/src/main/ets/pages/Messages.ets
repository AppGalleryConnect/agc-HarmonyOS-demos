import router from '@ohos.router';
import Logger from '@ohos.hilog';
import { Auth } from '../../api';
import { domain } from '../../constants';

const TAG = new String($r('app.string.Message')).toString();

@Component
export struct Message {
  @State title: string = '华为官方旗舰店'
  @State des: string = '您有一张100-30的优惠券待领取'
  @State time: string = '5分钟前'
  @State pageTitle: string = '消息'

  /**
  * In low-code mode, do not add anything to the build function, as it will be
  * overwritten by the content generated by the .visual file in the build phase.
  */
  build() {

  }

  aboutToAppear() {
    Auth.getAuthUser().then((res) => {
      if (res == null) {
        Logger.info(domain, TAG, "user has not login");
        router.push({
          url: 'pages/Login'
        })
      } else {
        Logger.info(domain, TAG, "user has login");
      }
    })
  }
}