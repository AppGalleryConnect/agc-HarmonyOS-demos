<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="300vp"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="$graphic:background_ability_main">

    <Text
        ohos:id="$+id:title_text"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:top_margin="10vp"
        ohos:bottom_margin="20vp"
        ohos:text="$string:auth_dialog_title"
        ohos:text_alignment="center"
        ohos:text_size="20vp"/>

    <TextField
        ohos:id="$+id:country_code"
        ohos:height="40vp"
        ohos:width="100vp"
        ohos:left_margin="20vp"
        ohos:bottom_margin="20vp"
        ohos:below="$id:title_text"
        ohos:background_element="$graphic:diable_black_button_element"
        ohos:hint="+86"
        ohos:text_size="15vp"
        ohos:text_alignment="center"
        />

    <TextField
        ohos:id="$+id:phone_number"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:left_margin="10vp"
        ohos:left_padding="10vp"
        ohos:right_margin="20vp"
        ohos:align_top="$id:country_code"
        ohos:right_of="$id:country_code"
        ohos:bottom_margin="20vp"
        ohos:background_element="$graphic:diable_black_button_element"
        ohos:hint="$string:auth_dialog_number_placeholder"
        ohos:text_alignment="left|vertical_center"
        ohos:text_size="15vp"
        />
    <TextField
        ohos:id="$+id:verify_code"
        ohos:height="40vp"
        ohos:width="160vp"
        ohos:left_margin="20vp"
        ohos:left_padding="10vp"
        ohos:bottom_margin="20vp"
        ohos:below="$id:country_code"
        ohos:background_element="$graphic:diable_black_button_element"
        ohos:hint="$string:auth_dialog_code_placeholder"
        ohos:text_alignment="left|vertical_center"
        ohos:text_size="15vp"
        />
    <Button
        ohos:id="$+id:get_verify_code"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:left_margin="10vp"
        ohos:right_margin="20vp"
        ohos:bottom_margin="20vp"
        ohos:background_element="$graphic:diable_black_button_element"
        ohos:hint="$string:auth_dialog_get_code_button_text"
        ohos:text_alignment="center"
        ohos:text_size="15vp"
        ohos:align_top="$id:verify_code"
        ohos:right_of="$id:verify_code"
        ohos:hint_color="$color:white"
        />

    <Button
        ohos:id="$+id:dialog_login"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:left_margin="20vp"
        ohos:right_margin="20vp"
        ohos:background_element="$graphic:diable_black_button_element"
        ohos:hint="$string:auth_dialog_auth_button_text"
        ohos:text_alignment="center"
        ohos:text_size="15vp"
        ohos:below="$id:verify_code"
        ohos:bottom_margin="20vp"
        ohos:hint_color="$color:white"
        />
</DependentLayout>