<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="330vp"
    ohos:alignment="horizontal_center"
    ohos:orientation="vertical"
    ohos:padding="30vp">

    <Text
        ohos:id="$+id:title"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:multiple_lines="true"
        ohos:text="应用跳转提示"
        ohos:text_alignment="center"
        ohos:text_color="black"
        ohos:text_size="20fp"/>

    <Text
        ohos:id="$+id:hints"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:multiple_lines="true"
        ohos:text="点击 ‘打开’ 按钮，将跳转至微信页面"
        ohos:text_alignment="left"
        ohos:text_color="black"
        ohos:text_size="14fp"
        ohos:top_margin="20vp"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:top_margin="40vp">

        <Button
            ohos:id="$+id:cancels"
            ohos:height="match_content"
            ohos:width="0"
            ohos:background_element="$graphic:rectangle_button_bg"
            ohos:bottom_padding="10vp"
            ohos:text="取消"
            ohos:text_color="black"
            ohos:text_size="18fp"
            ohos:top_padding="10vp"
            ohos:weight="1"/>

        <Button
            ohos:id="$+id:confirms"
            ohos:height="match_content"
            ohos:width="0"
            ohos:background_element="$graphic:blue_rectangle_button_bg"
            ohos:bottom_padding="10vp"
            ohos:left_margin="50vp"
            ohos:text="打开"
            ohos:text_color="#0000FF"
            ohos:text_size="18fp"
            ohos:top_padding="10vp"
            ohos:weight="1"/>
    </DirectionalLayout>
</DirectionalLayout>
