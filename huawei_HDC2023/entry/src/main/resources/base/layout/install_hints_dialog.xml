<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:left_padding="30vp"
    ohos:orientation="vertical"
    ohos:right_padding="30vp"
    >

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:background_element="$graphic:big_radius_bg"
        ohos:padding="20vp">

        <Text
            ohos:id="$+id:title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alpha="0.8"
            ohos:text="您未安装此应用"
            ohos:text_size="16fp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alpha="0.8"
            ohos:text="是否去应用市场安装？"
            ohos:text_size="16fp"
            ohos:top_margin="5vp"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="center"
            ohos:orientation="horizontal"
            ohos:top_margin="40vp">

            <Button
                ohos:id="$+id:cancels"
                ohos:height="match_content"
                ohos:width="0"
                ohos:background_element="$graphic:rectangle_button_bg"
                ohos:bottom_padding="10vp"
                ohos:text="取消"
                ohos:text_color="black"
                ohos:text_size="18fp"
                ohos:top_padding="10vp"
                ohos:weight="1"/>

            <Button
                ohos:id="$+id:confirms"
                ohos:height="match_content"
                ohos:width="0"
                ohos:background_element="$graphic:blue_rectangle_button_bg"
                ohos:bottom_padding="10vp"
                ohos:left_margin="50vp"
                ohos:text="去安装"
                ohos:text_color="#0000FF"
                ohos:text_size="18fp"
                ohos:top_padding="10vp"
                ohos:weight="1"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>
