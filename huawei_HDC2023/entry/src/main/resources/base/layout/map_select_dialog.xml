<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:orientation="vertical"
    ohos:padding="5vp">

    <DirectionalLayout
        ohos:id="$+id:mapList"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:background_element="$graphic:radius_bg"
        >

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alpha="0.6"
            ohos:bottom_padding="12vp"
            ohos:text="选择地图应用"
            ohos:text_size="16fp"
            ohos:top_padding="12vp"/>

        <Text
            ohos:height="2px"
            ohos:width="match_parent"
            ohos:alpha="0.2"
            ohos:background_element="#000000"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:background_element="$graphic:radius_bg"
        ohos:bottom_margin="10vp"
        ohos:top_margin="10vp">

        <Button
            ohos:id="$+id:close"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:rectangle_button_bg"
            ohos:bottom_padding="12vp"
            ohos:text="取消"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:top_padding="12vp"/>
    </DirectionalLayout>
</DirectionalLayout>
